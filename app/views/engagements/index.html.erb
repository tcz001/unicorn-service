<h1>Listing engagements</h1>

<table>
  <tr>
    <th>Beacon</th>
    <th>Unicorn</th>
    <th>Engagement date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @engagements.each do |engagement| %>
  <tr>
    <td><%= engagement.beacon_id %></td>
    <td><%= engagement.unicorn_id %></td>
    <td><%= engagement.engagement_date %></td>
    <td><%= link_to 'Show', engagement %></td>
    <td><%= link_to 'Edit', edit_engagement_path(engagement) %></td>
    <td><%= link_to 'Destroy', engagement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

