- model_class = Engagement
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:beacon_id) + ':'
  %br
  = @engagement.beacon_id
%p
  %strong= model_class.human_attribute_name(:unicorn_id) + ':'
  %br
  = @engagement.unicorn_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), engagements_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_engagement_path(@engagement), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), engagement_path(@engagement), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
