<h1>Unicorn</h1>

<% @beacons.each do |beacon| %>
    <div class="beacon">
        <h3 class="location"><%=beacon.location %></h3>
        <span class="number"><%=beacon.unicorns.count %></span>
        <% beacon.unicorns.each do |unicorn| %>
            <div class="unicorn">
                <%=unicorn.name %>
            </div>
        <% end %>
    </div>
<% end %>
