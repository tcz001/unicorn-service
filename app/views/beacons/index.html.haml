- model_class = Beacon
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:UUID)
      %th= model_class.human_attribute_name(:major)
      %th= model_class.human_attribute_name(:minor)
      %th= model_class.human_attribute_name(:location)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @beacons.each do |beacon|
      %tr
        %td= link_to beacon.id, beacon_path(beacon)
        %td= beacon.UUID
        %td= beacon.major
        %td= beacon.minor
        %td= beacon.location
        %td=l beacon.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_beacon_path(beacon), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), beacon_path(beacon), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_beacon_path, :class => 'btn btn-primary'
