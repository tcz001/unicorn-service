- model_class = Beacon
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:UUID) + ':'
  %br
  = @beacon.UUID
%p
  %strong= model_class.human_attribute_name(:major) + ':'
  %br
  = @beacon.major
%p
  %strong= model_class.human_attribute_name(:minor) + ':'
  %br
  = @beacon.minor
%p
  %strong= model_class.human_attribute_name(:location) + ':'
  %br
  = @beacon.location

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), beacons_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_beacon_path(@beacon), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), beacon_path(@beacon), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
